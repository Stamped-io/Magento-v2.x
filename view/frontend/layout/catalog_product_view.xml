<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
                <block class="Stamped\Core\Block\Core"  name="stamped.reviews.badge" as="stamped-reviews-badge" template="stamped/badge.phtml"/>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Stamped\Core\Block\Core"  name="stamped.reviews.widget" as="stamped-reviews-widget" template="Stamped_Core::stamped/widget.phtml" after="product.info"/>
        </referenceContainer>
        <referenceBlock name="product.info">
            <block class="Stamped\Core\Block\Core"  name="stamped.reviews" as="stamped-reviews" template="Stamped_Core::stamped/widget2.phtml" />
        </referenceBlock>
    </body>
</page>
